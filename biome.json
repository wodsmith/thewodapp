{
	"$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
	"root": true,
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"src/**/*.ts",
			"src/**/*.tsx",
			"src/**/*.js",
			"src/**/*.jsx",
			"*.json",
			"*.mjs",
			"*.ts",
			"!.vscode/settings.json",
			"!.claude/settings.local.json",
			"!.next/**"
		]
	},
	"linter": {
		"enabled": true,
		"includes": [
			"src/**/*.ts",
			"src/**/*.tsx",
			"src/**/*.js",
			"src/**/*.jsx",
			"*.json",
			"*.mjs",
			"*.ts"
		],
		"rules": {
			"recommended": true,
			"nursery": {
				"useUniqueElementIds": "off"
			},
			"suspicious": {
				"noExplicitAny": "error"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"includes": [
			"src/**/*.ts",
			"src/**/*.tsx",
			"src/**/*.js",
			"src/**/*.jsx",
			"*.json",
			"*.mjs",
			"*.ts",
			"!.vscode/settings.json"
		],
		"indentStyle": "tab"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "asNeeded"
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": false,
		"defaultBranch": "main"
	}
}
