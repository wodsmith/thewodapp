{
	"name": "wodsmith-start",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev --port 3000",
		"build": "vite build",
		"serve": "vite preview",
		"test": "vitest run",
		"preview": "pnpm run build && vite preview",
		"lint": "biome lint .",
		"format": "biome format --write . --no-errors-on-unmatched .",
		"check": "biome check .",
		"type-check": "pnpm exec tsc --noEmit",
		"cf-typegen": "wrangler types",
		"db:generate": "drizzle-kit generate",
		"db:studio": "drizzle-kit studio",
		"db:migrate:prod": "wrangler d1 migrations apply wodsmith-db --remote",
		"db:migrate:local": "wrangler d1 migrations apply wodsmith-start-wodsmith-db-dev --local -c .alchemy/local/wrangler.jsonc",
		"db:seed": "wrangler d1 execute wodsmith-start-wodsmith-db-dev --local --file ./scripts/seed.sql -c .alchemy/local/wrangler.jsonc",
		"alchemy:configure": "bun alchemy configure",
		"alchemy:dev": "STAGE=dev bun alchemy.run.ts && sed -i '' 's|\"./src/db/migrations\"|\"../../src/db/migrations\"|g' .alchemy/local/wrangler.jsonc && pnpm db:migrate:local",
		"alchemy:staging": "STAGE=staging bun alchemy.run.ts",
		"deploy": "STAGE=prod bun alchemy.run.ts",
		"deploy:staging": "STAGE=staging bun alchemy.run.ts",
		"deploy:destroy": "bun alchemy.run.ts --destroy"
	},
