{
	"name": "ledger",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev --port 3001",
		"build": "vite build",
		"preview": "pnpm run build && vite preview",
		"lint": "biome lint .",
		"format": "biome format --write . --no-errors-on-unmatched .",
		"check": "biome check .",
		"type-check": "tsc --noEmit",
		"cf-typegen": "wrangler types",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:studio": "drizzle-kit studio",
		"db:migrate:local": "wrangler d1 migrations apply ledger-db-dev --local -c .alchemy/local/wrangler.jsonc",
		"alchemy:dev": "STAGE=dev bun alchemy.run.ts",
		"deploy": "bun alchemy.run.ts",
		"deploy:destroy": "bun alchemy.run.ts --destroy",
		"ledger-deploy": "STAGE=prod bun alchemy.run.ts"
	},
	"dependencies": {
		"@ai-sdk/openai": "^3.0.26",
		"@mastra/core": "^1.2.0",
		"@paralleldrive/cuid2": "^2.2.2",
		"@tailwindcss/vite": "^4.0.6",
		"@tanstack/react-router": "^1.132.0",
		"@tanstack/react-start": "^1.132.0",
		"@tanstack/react-table": "^8.21.3",
		"ai": "^6.0.77",
		"alchemy": "catalog:",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"drizzle-orm": "^0.39.3",
		"lucide-react": "^0.544.0",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"server-only": "^0.0.1",
		"tailwind-merge": "^2.6.0",
		"tailwindcss": "^4.0.6",
		"zod": "^4.2.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.0.6",
		"@cloudflare/workers-types": "^4.20250508.0",
		"@types/node": "^22.19.3",
		"@types/react": "^19.2.0",
		"@types/react-dom": "^19.2.0",
		"@vitejs/plugin-react": "^5.0.4",
		"drizzle-kit": "^0.30.6",
		"typescript": "^5.7.2",
		"vite": "^7.3.0",
		"vite-tsconfig-paths": "^5.1.4",
		"wrangler": "^4.56.0"
	}
}
