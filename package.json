{
	"name": "wodsmith-monorepo",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"dev:stripe": "stripe listen --forward-to localhost:3000/api/webhooks/stripe",
		"lint": "turbo lint",
		"format": "turbo format",
		"check": "turbo check",
		"type-check": "turbo type-check",
		"test": "turbo test",
		"test:coverage": "turbo test:coverage",
		"db:generate": "turbo db:generate",
		"db:studio": "turbo db:studio",
		"db:migrate:dev": "turbo db:migrate:dev",
		"db:migrate:prod": "turbo db:migrate:prod",
		"email:dev": "turbo email:dev",
		"ts:clean": "find . -name '.tsbuildinfo' -type f -delete",
		"sprite:create": "bun run scripts/create-sprite.ts",
		"sprite:checkout": "bun run scripts/create-sprite.ts --checkout",
		"sprite:destroy": "bun run scripts/destroy-sprite.ts"
	},
	"devDependencies": {
		"@fly/sprites": "^0.0.1",
		"turbo": "^2.5.8"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"packageManager": "pnpm@9.12.1+sha512.e5a7e52a4183a02d5931057f7a0dbff9d5e9ce3161e33fa68ae392125b79282a8a8a470a51dfc8a0ed86221442eb2fb57019b0990ed24fab519bf0e1bc5ccfc4",
	"engines": {
		"node": ">=18"
	}
}
