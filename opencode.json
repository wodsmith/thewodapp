{
  "$schema": "https://opencode.ai/config.json",
  "formatter": {
    "biome": {
      "disabled": true
    },
    "wodsmith-biome": {
      "command": ["pnpm", "--filter", "wodsmith-start", "format"],
      "extensions": [".ts", ".tsx", ".js", ".jsx", ".json"]
    }
  },
  "mcp": {
    "ast-grep": {
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/ast-grep/ast-grep-mcp",
        "ast-grep-server"
      ],
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "-y", "@playwright/mcp@latest"],
      "enabled": true
    },
    "deepwiki": {
      "type": "remote",
      "url": "https://mcp.deepwiki.com/mcp",
      "enabled": true
    }
  }
}
